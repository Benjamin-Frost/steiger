    "globby": "^14.0.1",
    "immer": "^10.1.1",
    "patronum": "^2.2.0",
    "prexit": "^2.2.0",
    "yargs": "^17.7.2",
    "zod": "^3.23.6",
    "zod-validation-error": "^3.3.0"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^20.1.3",
    "@types/node": "^20.12.8",
    "@types/yargs": "^17.0.32",
    "pretty-reporter": "workspace:*",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
